{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "src/",
            "tutorials/",
            "README.md"
        ],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [ "plugins/markdown" ],
    "opts": {
        "template": "./node_modules/docdash/",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "docdash": {
        "sort": true,
        "search": true,
        "typedefs": true,
        "navLevel": 2, 
        "sectionOrder": [
            "Classes",
            "Modules",
            "Externals",
            "Events",
            "Namespaces",
            "Mixins",
            "Tutorials",
            "Interfaces"
       ]
    }
}